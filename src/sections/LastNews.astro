---
import LastNewsCard from "../components/cards/LastNewsCard.astro"
import foto from '/public/images/hero-img.webp';

interface Props {
    title: string
}

const {title} = Astro.props

---

<section class="last-news">
    <h2 class="last-news_title">{title}</h2>
    <div class="container-cards">
        <LastNewsCard src={foto.src} alt="imagen ilustrativa de la noticia" title="Noticia 1" date="17 abr. 2024" />
        <LastNewsCard src={foto.src} alt="imagen ilustrativa de la noticia" title="Noticia 1" date="17 abr. 2024" />
        <LastNewsCard src={foto.src} alt="imagen ilustrativa de la noticia" title="Noticia 1" date="17 abr. 2024" />
    </div>
</section>

<style>
    .last-news{
        padding: 50px;
        display: flex;
        flex-direction: column;
        gap: 30px;
        background: var(--fondo-blanco);
    }

    .last-news_title{
        font-size: 50px;
        color: var(--azul);
    }

    .container-cards{
        margin-top: 50px;
        display: flex;
        gap: 40px;
    }

    /* SMARTPHONE */
    @media screen and (min-width: 375px) and (max-width: 767px){

        .last-news{
            padding: 30px;
        }

        .last-news_title{
            font-size: 40px
        }

        .container-cards{
            flex-direction: column;
            align-items: center;
            gap: 40px;
        }      
    }

    /* TABLET */
    @media screen and (min-width: 768px) and (max-width: 1023px){

        .last-news_title{
            font-size: 50px
        }

        .container-cards{
            display: flex;
            width: 100%;
        }      
    }

    /* DESKTOP */
    @media screen and (min-width: 1024px){

    }
</style>