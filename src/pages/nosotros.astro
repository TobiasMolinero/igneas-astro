    /* DESKTOP */
    @media screen and (min-width: 1024px){
        .new-news_title{
            font-size: 40px;
        }
    }

    @keyframes flicker {
        0%, 100% {
            opacity: 0.4;
            filter: drop-shadow(0 0 0 var(--naranja));
            transform: rotate(-25deg);
        }
        50% {
            opacity: 1;
            filter: drop-shadow(0 0 8px var(--naranja));
            transform: rotate(-25deg);
        }
    }

</style>
