---
import Layout from '../layouts/Layout.astro';
import HeroTitle from '../components/HeroTitle.astro';
import Miembros from '../sections/Miembros.astro';
// import fuego from '/public/images/imagen-fuego.svg';
---

<Layout title="Conocé un poco más sobre nosotros - Cooperativa IGNEAS" description='Conocé mas sobre nosotros, nuestro equipo, objetivos, metas, etc.' notFound={false}>
    <section class="us-banner">
        <HeroTitle title='CONOCÉ NUESTRO EQUIPO!'/>
        <!-- <img class="fuego" src={fuego.src} alt="imagen decorativa de una llama de fuego "> -->
    </section>
    <Miembros />
</Layout>


<style>

    .us-banner{
        position: relative;
        background: var(--azul);
        height: 100vh;
        display: flex;
        align-items: end;
        padding: 40px;
        overflow: hidden;
    }

    .title{
        margin-top: 300px;
    }

