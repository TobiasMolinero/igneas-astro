---
import HeroTitle from "../../components/HeroTitle.astro";
import Layout from "../../layouts/Layout.astro";
import LastNews from "../../sections/LastNews.astro";
import fuego from '/public/images/imagen-fuego.svg';
---

<Layout title="blog" description="blogs">
    <section class="banner-blog">
        <HeroTitle title="BLOG IGNEAS"/>
        <img class="fuego" src={fuego.src} alt="imagen decorativa de una llama de fuego ">
    </section>
    <!-- <section class="intro-blog">
        <h2 class="intro-title"> Bienvenido a nuestra sección de blog. Aquí vas a encontrar noticias y notas sobre nuestro trabajo o algun tema de interes.</h2>
    </section> -->
    <LastNews title="Noticias y artículos destacados" />
</Layout>

<style>
    .banner-blog{
        position: relative;
        height: 100vh;
        display: flex;
        align-items: end;
        column-gap: 40px;
        padding: 40px;
        background: var(--azul);
        overflow: hidden;
    }

    .fuego{
        position: absolute;
        bottom: -200px;
        right: -30px;
        width: 600px;
        animation: flicker 4s infinite ;
    }

    /* .intro-blog{
    	background: var(--fondo-blanco);
    	padding: 80px 0;
    	display: grid;
    	place-items: center;
    }

    .intro-title{
        width: 80%;
        text-align: center;
        color: var(--azul);
    } */

    .new-news{
        padding: 50px 50px 100px 50px;
    }

    h2{
        color: var(--azul);
    }

    /* SMARTPHONE */
    @media screen and (min-width: 375px) and (max-width: 767px){
        .fuego{
            width: 350px;
            bottom: -80px;
            right: -95px;
            z-index: 0;
        }
    }

    /* TABLET */
    @media screen and (min-width: 768px) and (max-width: 1023px){
        .fuego{
            width: 450px;
            bottom: -100px;
            right: -100px;
            z-index: 0;
        }
    }

    /* DESKTOP */
    @media screen and (min-width: 1024px){
        .new-news_title{
            font-size: 40px;
        }
    }

    @keyframes flicker {
        0%, 100% {
            opacity: 0.4;
            filter: drop-shadow(0 0 0 var(--naranja));
            transform: rotate(-25deg);
        }
        50% {
            opacity: 1;
            filter: drop-shadow(0 0 8px var(--naranja));
            transform: rotate(-25deg);
        }
    }
</style>