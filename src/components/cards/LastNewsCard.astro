---

interface Props {
    src: string
    alt: string
    title: string
    date: string
}

const {src, alt, title, date} = Astro.props;
---

<div class="card">
    <div class="img-card">
        <img class="image"src={src} alt={alt} >
    </div>
    <h4 class="card-title">{title}</h4>
    <span class="card-date">{date}</span>
</div>

<style>
    .card{
        width: 400px;
        height: 300px;
        display: flex;
        flex-direction: column;
    }

    .img-card{
        height: 230px;
    }

    .image{
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .card-title{
        height: ;
        padding: 10px 5px;
    }

    .card-date{
        padding: 5px;
        font-size: 14px;
        font-weight: 500;
    }

    /* SMARTPHONE */
    @media screen and (min-width: 375px) and (max-width: 767px){
        .card{
            width: 85%;
        }
    }

    /* TABLET */
    @media screen and (min-width: 768px) and (max-width: 1023px){
        .card{
            display: inline-block;
            width: 400px;
            height: 300px;
        }
    }

    /* DESKTOP */
    @media screen and (min-width: 1024px){}
</style>