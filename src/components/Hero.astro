---
import HeroTitle from './HeroTitle.astro';
---

<section class="hero">
        <div class="hero-content">
            <HeroTitle title="COOPERATIVA IGNEAS"/>
            <h2 class="hero-text">Gestora cultural, promoci√≥n de las artes, creadora de proyectos comunitarios y educativos.</h2>
        </div>
</section>

<style>
    .hero{
        position: relative;
        height: 100vh;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.600),
            rgba(0, 0, 0, 0.400),
            rgba(0, 0, 0, 0.400),
            rgba(0, 0, 0, 0.200),
            transparent
        ),
        url('/images/hero-img.webp');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .hero-content{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: end;
        align-items: start;
    }

    .hero-title{
        background-image: linear-gradient(
            to right,
            var(--amarillo),
            var(--naranja),
            var(--magenta)
        ); 
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        font-weight: 600;
    }

    .hero-text{
        color: #fff;
        text-shadow: 0 0 20px #000;
        font-weight: 500;
    }


    /* SMARTPHONE */
    @media screen and (min-width: 375px) and (max-width: 767px){
        
        .hero{
            background-attachment: initial;
        }
        
        .hero-content{
            padding: 0 10px 150px 20px;
        }
        
        .hero-title{
            font-size: 30px;
        }

        .hero-text{
            font-size: 20px;
            width: 100%;
        }
    }
    
    @media screen and (min-width: 450px) {

        .hero{
            background-attachment: initial;
        }

        .hero-title{
            font-size: 40px;
        }
    }

    /* TABLET */
    @media screen and (min-width: 768px) and (max-width: 1023px){
        .hero-content{
            padding: 0 0 60px 30px;
        }
        
        .hero-title{
            font-size: 60px;
        }

        .hero-text{
            font-size: 30px;
            width: 100%;
        }
    }
    
    /* //DESKTOP */
    @media screen and (min-width: 1024px){
        .hero-content{
            padding: 0 0 60px 40px;
        }

        .hero-title{
            font-size: 80px;
        }

        .hero-text{
            font-size: 40px;
            width: 1000px;
        }     
    }
</style>