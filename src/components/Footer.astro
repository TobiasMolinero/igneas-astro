<style>
    .footer{
        /* padding: 40px 40px 0 40px; */
        background: linear-gradient(
            to bottom,
            var(--magenta),
            var(--naranja),
            var(--amarillo)
        );
        display: flex;
        flex-direction: column;
        box-shadow: 0 0 8px 2px var(--magenta)
    }

    .footer-content{
        height: fit-content;
        width: 100%;
        display: flex;
        gap: 40px;
        flex-wrap: wrap;
        padding: 60px;
    }

    .content{
        flex: 1 1 300px
    }

    .footer-info{
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .logo-name{
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .logo{
        width: 60px;
        height: 60px;
    }

    .name-meaning{
        display: flex;
        flex-direction: column;
        gap: 5px;
        color: var(--azul);
    }

    .name{
        color: var(--azul);
    }

    .meaning{
        font-size: 14px;
        font-weight: 400;
        width: 80%;
    }

    .info{
        padding-left: 20px;
    }

    .info-list{
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .info-list > li{
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        font-weight: 400;
        color: var(--azul);
    }

    .ubicacion, .whatsapp, .mail{
        width: 20px;
        height: 20px;
        color: var(--azul);
    }

    .footer-nav{        
        display: flex;
        flex-direction: column;
        align-items: center;
        gap:10px;
    }

    .nav{
        display: flex;
        flex-direction: column;
        list-style: none;
        padding-left: 20px;
    }
    
    .nav-link{
        color: var(--azul);
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
    }
    .nav-link:hover{
        text-decoration: underline;
    }
    
    .nav-title, .social-networks_title{
        color: var(--azul);
    }

    .footer-social-networks{
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .social-networks-list{
        list-style: none;
        display: flex;
        gap: 10px;
    }

    .instagram, .facebook, .youtube{
        width: 30px;
        height: 30px;
        color: var(--azul);
    }

    .footer-credits{
        background: #0b0b0b;
        padding: 5px 0;
    }
    
    .credits-text{
        color: #797777;
        text-align: center;
    }

    .credits-text a{
        color: inherit;
        text-decoration: none;
    }
    .credits-text a:hover{
        text-decoration: underline;
    }

    h4{
        font-weight: 600
    }

    /* SMARTPHONE */
    @media screen and (min-width: 375px) and (max-width: 767px){
        .footer-nav{
            align-items: start;
        }

        .instagram, .facebook, .youtube{
            width: 40px;
            height: 40px;
        }
    }

    /* TABLET */
    @media screen and (min-width: 768px) and (max-width: 1023px){
        .instagram, .facebook, .youtube{
            width: 40px;
            height: 40px;
        }
    }

    /* DESKTOP */
    @media screen and (min-width: 1024px){
    }
</style>